#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
ldflags="@LDFLAGS@ -L@libdir@ -lsprockit -lsstmac @BOOST_LDFLAGS@ @LIBS@"
libdir="@libdir@"
libs="@LIBS@"
includedir=@includedir@
package="@PACKAGE@"
version="@VERSION@"
cflags="@CFLAGS@"
cc="@CC@"
cppflags="@BOOST_CPPFLAGS@ -I${includedir}/sstmac @CPPFLAGS@ -I${includedir} -I${includedir}/sstmac/software/libraries -I${includedir}/sstmac -I${includedir}/sstmac/tools"
cxxflags="@CXXFLAGS@"
cxx="@CXX@"
upc="@UPC@"
fc="@FC@"
fcflags="@FCFLAGS@"
fclibs="@FCLIBS@"
libtool="@exec_prefix@/bin/sstmacro-libtool"

usage="\
Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--ldflags] [--ldflagsparallel] [--libdir] [--libs] [--cflags] [--cc] [--cppflags] [--cxx] [--cxxflags] [--fc] [--fcflags] [--fclibs] [--includedir] [--libtool]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

exec_prefix_set=no

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo $version
      ;;
    --ldflags)
      echo $ldflags
      ;;
    --ldflagsparallel)
      echo $ldflagsparallel
      ;;
    --cflags)
      echo $cflags
      ;;
    --cc)
      echo $cc
      ;;
    --cppflags)
      echo $cppflags
      ;;
    --cxxflags)
      echo $cxxflags
      ;;
    --cxx)
      echo $cxx
      ;;
    --upc)
      echo $upc
      ;;
    --upc-flags)
      echo "${prefix}/bin/sstmac_upc_preprocessor.py"
      ;;
    --fc)
      echo $fc
      ;;
    --fcflags)
      echo $fcflags
      ;;
    --fclibs)
      echo $fclibs
      ;;
    --libdir)
      echo $libdir
      ;;
    --libs)
      echo $libs
      ;;
    --includedir)
      echo $includedir
      ;;
    --libtool)
      echo $libtool
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
