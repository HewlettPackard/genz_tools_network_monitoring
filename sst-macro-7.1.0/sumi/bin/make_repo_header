#! /usr/bin/env python

import os
import commands
import sys
from configlib import getoutput

srcdir = sys.argv[1]
prefix = sys.argv[2]
builddir = os.path.abspath(os.getcwd())

os.chdir(srcdir)
repo = getoutput("git rev-parse HEAD")

header = """#ifndef %s_REPO_HEADER
#define %s_REPO_HEADER "%s"
#endif
""" % (prefix,prefix,repo)

os.chdir(builddir)
open("%s_repo.h" % prefix,"w").write(header)


